<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#ff5d639e">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffffff"
                    android:layout_margin="3dp"
                    android:id="@+id/editText"
                    android:gravity="top"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mic_btn_style"
                    android:src="@mipmap/mic_hdpi"
                    android:id="@+id/imageButton"
                    android:layout_gravity="right|bottom"/>
            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/change_btn_style"
                    android:src="@mipmap/change_dpi"
                    android:elevation="10dp"
                    android:id="@+id/imageButton4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="↑↓Replace!"
                    android:textColor="#fff6ca06"
                    android:id="@+id/textView" />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="#ffffffff"
                android:layout_weight="1"
                android:id="@+id/editText2"
                android:gravity="top"/>
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/trans_btn_style"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:src="@mipmap/trans_hdpi"
            android:id="@+id/imageButton2" />
    </LinearLayout>
</LinearLayout>


